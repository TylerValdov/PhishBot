{
  "manifest_version": 3,
  "name": "Phishing Detector",
  "version": "1.0",
  "description": "Analyze emails for phishing risk using Gemini AI.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://mail.google.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "phishbot128.png",
      "48": "phishbot128.png",
      "128": "phishbot128.png"
    }
  }
}